# mod_rewrite

RewriteEngine on

#does not apply to existing directories; if the folder exists on the server, don't change anything and don't run the rule

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

#Check for file in directory with .html extension

RewriteCond %{REQUEST_FILENAME}\.html -f

#here we show the page that hs the .html extension

RewriteRule ^(.*)$ $1.html [NC,L]

